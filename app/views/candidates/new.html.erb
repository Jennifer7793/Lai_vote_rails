<h1>Add New Candidate</h1>

<%= form_for :candidate url: candidates_path method: post do |f| %>
<div>
  <%= f.label :name %>
  <%= f.text_field :name %>
</div>

<div>
  <%= f.label :age %>
  <%= f.text_field :age %>
</div>

<div>
  <%= f.label :party %>
  <%= f.text_field :party %>
</div>

<div>
  <%= f.label :politics %>
  <%= f.text_area :politics %>
</div>

<%= f.submit 'Add' %>

<% end %>
<%= link_to 'Candidates List', candidates_path %>